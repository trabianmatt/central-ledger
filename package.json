{
  "name": "@leveloneproject/central-ledger",
  "version": "1.4.3",
  "description": "Central ledger hosted by a scheme to record and settle transfers.",
  "repository": {
    "type": "git",
    "url": "git@github.com:LevelOneProject/central-ledger.git"
  },
  "config": {
    "db": "--config ./config/db-migrate.json"
  },
  "scripts": {
    "start": "node src/server.js",
    "dev": "npm run docker:stop && docker-compose -f docker-compose.yml -f docker-compose.dev.yml up --build -d",
    "test": "tape 'test/unit/**/*.test.js' | faucet",
    "pretest": "standard",
    "test:xunit": "tape 'test/unit/**/*.test.js' | tap-xunit",
    "test:coverage": "istanbul cover tape -- 'test/unit/**/*.test.js'",
    "test:functional": "env $(cat .env | xargs) ./functional-runner.sh docker-compose.yml docker-compose.functional.yml",
    "db:create": "db-migrate db:create central_ledger $npm_package_config_db",
    "db:psql": "docker run -it --net centralledger_back --rm postgres:9.3 sh -c 'exec psql -h postgres -p \"$POSTGRES_PORT_5432_TCP_PORT\" -U central_ledger'",
    "migrate": "db-migrate up $npm_package_config_db",
    "migrate:down": "db-migrate down $npm_package_config_db",
    "migrate:create": "db-migrate create $npm_package_config_db",
    "docker:stop": "docker-compose -f docker-compose.yml -f docker-compose.dev.yml -f docker-compose.functional.yml stop",
    "docker:rm": "docker-compose -f docker-compose.yml -f docker-compose.dev.yml -f docker-compose.functional.yml rm",
    "docker:clean": "npm run docker:stop && npm run docker:rm"
  },
  "dependencies": {
    "blipp": "^2.3.0",
    "bluebird": "^3.4.3",
    "boom": "^3.2.2",
    "db-migrate": "^0.10.0-beta.15",
    "db-migrate-pg": "^0.1.10",
    "eventric": "^0.24.1",
    "glob": "^7.0.6",
    "glue": "^3.4.0",
    "good": "^7.0.1",
    "good-console": "^6.1.2",
    "good-squeeze": "^4.0.0",
    "hapi": "^14.1.0",
    "hapi-swagger": "^6.2.2",
    "inert": "^4.0.1",
    "joi": "^9.0.4",
    "massive": "^2.5.0",
    "nes": "^6.3.1",
    "pg": "^6.1.0",
    "rc": "^1.1.6",
    "urlsafe-base64": "^1.0.0",
    "uuid4": "^1.0.0",
    "vision": "^4.1.0"
  },
  "optionalDependencies": {},
  "devDependencies": {
    "@travi/any": "^0.6.1",
    "faucet": "0.0.1",
    "istanbul": "^0.4.5",
    "pre-commit": "^1.1.3",
    "proxyquire": "^1.7.10",
    "sinon": "^1.17.5",
    "standard": "^7.1.2",
    "tap-xunit": "^1.4.0",
    "tape": "^4.6.0",
    "tapes": "^4.1.0"
  }
}
